    <div class="section-description">
        {{#if (eq locale 'en')}}
          <span class="locale-selector" {{action 'setLocale' 'lt'}}>
            <img class="locale-flag" src="/img/lt.png" alt="lietuvu?"/>
            Lietuvi≈≥?
          </span>
        {{else}}
          <span class="locale-selector" {{action 'setLocale' 'en'}}>
