<div class="row">
  <div class="six columns">
    <label>Your name</label>
    {{input value=invitee.name class="u-full-width" placeholder="Name"}}
  </div>

  <div class="six columns">
    <label>Your email</label>
    {{input value=invitee.email class="u-full-width" placeholder="chochito@caliente.io" pattern='[^@\s]+@[^@\s]+' type='email' title='Please use a valid email address' required='true' }}
  </div>
</div>

<div class="row">
  <div class="twelve columns guest--checkbox">
    <label>Are you comming to Trakei after the ceremony?</label>
    {{x-toggle
      value=invitee.trakai
      showLabels=true
      onToggle=(mut invitee.trakai)
      onLabel='Yes'
      offLabel='No'
      size='large'
    }}
  </div>
</div>

<div class="row">
  <div class="six columns">
    <label>Starter</label>
    {{#power-select
        searchEnabled=false
        selected=chosenStarter
        class="u-full-width"
        placeholder="Select your option"
        options=starters
        onchange=(action "onStarterChanged")
        as |name|
      }}
      {{name}}
    {{/power-select}}
  </div>
  <div class="six columns">
    <label>Main</label>
    {{#power-select
        searchEnabled=false
        selected=chosenMain
        class="u-full-width"
        placeholder="Select your option"
        options=mains
        onchange=(action "onMainChanged")
        as |name|
      }}
      {{name}}
    {{/power-select}}
  </div>
</div>
